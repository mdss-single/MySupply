@require 'vars.styl';

/*  <fonts>  */
@font-face
	font-family logo
	src url('../fonts/raleway-500-normal.woff2') format('woff2'), url('../fonts/raleway-500-normal.woff') format('woff')
	font-weight normal
	font-style normal
@font-face
	font-family Roboto
	src url('../fonts/Roboto-Black.woff2') format('woff2'), url('../fonts/Roboto-Black.woff') format('woff')
	font-weight 900
	font-style normal
@font-face
	font-family Roboto
	src url('../fonts/Roboto-Light.woff2') format('woff2'), url('../fonts/Roboto-Light.woff') format('woff')
	font-weight 300
	font-style normal
@font-face
	font-family Roboto
	src url('../fonts/Roboto-Medium.woff2') format('woff2'), url('../fonts/Roboto-Medium.woff') format('woff')
	font-weight 500
	font-style normal
@font-face
	font-family Roboto
	src url('../fonts/Roboto-Bold.woff2') format('woff2'), url('../fonts/Roboto-Bold.woff') format('woff')
	font-weight bold
	font-style normal
@font-face
	font-family Roboto
	src: url('../fonts/Roboto-Regular.woff2') format('woff2'), url('../fonts/Roboto-Regular.woff') format('woff')
	font-weight normal
	font-style normal
/*  </fonts>  */

/*  <general>  */
html
	min-height 100vh
	font-size 62.5%
	cursor default
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
body
	display flex
	flex-direction column
	min-height 100vh
	color $colorGray
	font normal 1.3rem/1.3 Roboto
	background-color #fff
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color $colorGray
	font inherit
	text-decoration underline
	transition all .2s
	&:hover
		text-decoration none
img
	vertical-align top
	max-width 100%
.main
	flex 1
	background-color #f7f7f7
	padding-bottom 30px
/*  </general>  */

/*  <header>  */
.header
	flex-shrink 0
	background-color #fafafa
	border-bottom 1px solid #eee
	&__short
		display flex
		justify-content space-between
		align-items center
		padding 30px 0
	&__choose
		display flex
		justify-content space-between
		margin 15px 0 20px
	&__city
		color $colorLight
		a
			position relative
			text-decoration none
			padding-left 16px
			&::before
				position absolute
				top 50%
				left 0
				width 10px
				height 13px
				background url('data:image/svg+xml;base64,') no-repeat 0 0 / cover
				content ''
				transform translateY(-50%)
		a:hover
			text-decoration underline
	&__auth
		position relative
		text-decoration none
		padding-left 20px
		a:hover&
			text-decoration underline
		&::before
			position absolute
			top 50%
			left 0
			width 12px
			height 13px
			background url('data:image/svg+xml;base64,') no-repeat 0 0 / cover
			content ''
			transform translateY(-50%)
	&__system
		display flex
		align-items center
		&.is_stuck
			z-index 1000
			background-color #fafafa
			padding 15px 0
			&::before
				position absolute
				top 0
				bottom 0
				width 20000%
				background-color @background-color
				box-shadow 0 3px 6px rgba($colorDark, .2)
				content ''
			&::before
				left -10000%
	&__logo
		position relative
		font-size 2.4rem
		font-family logo
		font-size-adjust .5
		text-decoration none
	&__phone
		font-weight 500
		font-size 1.7rem
		text-decoration none
	&__search
		flex 1
		position relative
		margin 0 200px 0 40px
		&-input
			width 100%
			height 46px
			background-color #fff
			border 1px solid #ddd
			border-radius 2px
			padding 0 50px 0 22px
			box-shadow 0 2px 3px rgba($colorDark, .1)
			transition all .2s
			&:focus
				outline none
				box-shadow 0 3px 6px rgba($colorDark, .2)
		&-btn
			position absolute
			top 50%
			right 16px
			width 30px
			height @width
			background transparent url('data:image/svg+xml;base64,') no-repeat center center / 18px auto
			border 0
			cursor pointer
			transform translateY(-50%)
	&__cart
		position relative
		&::after
			pointer-events none
			position absolute
			top 5px
			bottom 5px
			right calc(100% + 14px)
			width 1px
			background-color #ddd
			content ''
		&-count
			position absolute
			top 50%
			right calc(100% + 30px)
			color #fff
			font-weight 500
			line-height 2.8rem
			background-color #4c95ca
			border-radius (@line-height/2)
			padding 0 10px
			transform translateY(-50%)
			&:empty
				min-width 28px
				color $colorGray
				background-color #ddd
				&::before
					content '0'
			&::after
				position absolute
				top 50%
				left -35px
				width 21px
				height 18px
				background url('data:image/svg+xml;base64,') no-repeat 0 0 / cover
				content ''
				transform translateY(-50%)
		&-summ
			color $colorGray
			font-weight 500
			margin 0 0 6px
		&-shipper
			color $colorLight
			font-size 1.1rem
		&-link
			position absolute
			top 0
			right 0
			bottom 0
			left 0
	&__nav
		display flex
		justify-content space-between
		margin 25px 0 15px
		&-item
			position relative
			font-weight 500
			font-size 1.2rem
			text-decoration none
			&:first-child
				padding-left 20px
				&::after
					position absolute
					top 50%
					left 0
					width 12px
					height 11px
					background url('data:image/svg+xml;base64,') no-repeat 0 0 / cover
					content ''
					transform translateY(calc(-50% - 2px))
			&::before
				position absolute
				bottom 0
				left 50%
				width 0
				height 1px
				background-color currentColor
				content ''
				transform translateX(-50%)
				transition all .2s
			a:hover&
				&::before
					width 100%
.easy-autocomplete-container
	position absolute
	z-index 9999
	width 100%
	background-color #fff
	border 1px solid #ddd
	border-radius 0 0 2px 2px
	margin-top -1px
	box-shadow 0 2px 8px rgba($colorDark, .2)
	ul
		padding 0
		margin 0
		list-style none
	a
		display block
		color $colorDark
		font-weight 500
		font-size 1.3rem
		text-decoration none
		background-color #fff
		padding 10px 22px
		&:hover
			background-color #eee
	.selected
		a
			background-color #eee
/*  </header>  */

/*  <footer>  */
.footer
	overflow hidden
	color #ddd
	background-color $colorGray
	padding 45px 0 0
	&--short
		padding 0
	.container
		display flex
		flex-wrap wrap
	&__nav
		flex 1
		display flex
		&-block
			display flex
			flex-direction column
			margin 10px 70px 0 0
		&-title
			font-weight 500
			margin 0 0 5px
		&-item
			align-self flex-start
			color #ddd
			text-decoration none
			margin 6px 0
			a:hover&
				text-decoration underline
	&__general
		width 260px
	&__logo
		font-size 2.4rem
		font-family logo
		font-size-adjust .5
		a
			color #ddd
			text-decoration none
	&__slogan
		line-height 2.1rem
		margin-bottom 20px
	&__phone
	&__email
		position relative
		font-weight 300
		font-size 1.7rem
		padding-left 30px
		margin 14px 0
		&::before
			position absolute
			top 50%
			left 0
			transform translateY(-50%)
		a
			color #ddd
			text-decoration none
	&__phone
		&::before
			width 16px
			height 22px
			background url('data:image/svg+xml;base64,') no-repeat 0 0 / cover
			content ''
	&__email
		&::before
			width 18px
			height 18px
			background url('data:image/svg+xml;base64,') no-repeat 0 0 / cover
			content ''
	&__social
		display flex
		margin-top 20px
		&-item
			display flex
			justify-content center
			align-items center
			width 38px
			height @width
			border 1px solid #ddd
			border-radius 50%
			margin-right 14px
			&:last-child
				margin-right 0
			svg
				max-width 25px
				max-height @max-width
				fill #ddd
				transition all .2s
			a:hover&
				background-color #ddd
				svg
					fill $colorGray
	&__copyright
		position relative
		width 100%
		height 50px
		line-height 5rem
		background-color $colorDark
		margin-top 45px
		^[0]--short &
			margin-top 0
		&::before
		&::after
			position absolute
			top 0
			bottom 0
			width 10000%
			background-color @background-color
			content ''
		&::before
			left -10000%
		&::after
			left 100%
/*  </footer>  */

/*  <breadcrumbs>  */
.breadcrumbs
	display flex
	list-style none
	color $colorLight
	font-size 1.1rem
	padding 0
	margin 18px 0
	li
		position relative
		margin-right 20px
		&::after
			position absolute
			top 50%
			right -14px
			width 8px
			height 1px
			background-color $colorLight
			content ''
		&:last-child
			color $colorGray
			margin-right 0
			&::after
				display none
	a
		color $colorLight
		text-decoration none
	a:hover
		text-decoration underline
/*  </breadcrumbs>  */

/*  <category>  */
.category
	&__name
		color $colorDark
		font-weight 900
		font-size 3rem
		margin 0 0 5px
	&__address
		color $colorGray
		a
			text-decoration-style dotted
			margin-left 5px
	&__tags
		margin 15px 0 24px
		&-item
			display inline-flex
			align-items center
			height 30px
			text-decoration none
			white-space nowrap
			background-color #ddd
			border-radius (@height / 2)
			padding 0 15px
			margin-right 15px
			a:hover&
				color #fff
				background-color $colorLight
	&__wrap
		display flex
		align-items flex-start
		margin-top 15px
	&__sidebar
		width 278px
		background-color #fff
		border-radius 2px
		box-shadow 0 5px 10px rgba($colorDark, .1)
	&-filter
		&__result
			color $colorDark
			font-weight 500
			text-align center
			border-bottom 1px solid #eee
			padding 20px 0
			margin 0 20px
			p
				margin 3px 0
			.btn
				margin-top 12px
		&__range
			display flex
			flex-wrap wrap
			justify-content space-between
			&-item
			&-single
				display flex
				align-items center
				position relative
				overflow hidden
				width calc(50% - 3px)
				height 38px
				border 1px solid #ddd
				border-radius 2px
				padding 0 8px
				span
					flex-shrink 0
					color $colorLight
				input
					width calc(100% - 45px)
					margin 0 5px
			&-single
				width 100%
			&-input
				color $colorGray
				background-color transparent
				border 0
			&-place
				width 100%
				margin 20px 0 6px
			&-unit
				position absolute
				top 50%
				right 6px
				transform translateY(-50%)
		&__categories
			display flex
			flex-direction column
			margin-top -10px
			&-item
				align-self flex-start
				text-decoration none
				margin 8px 0
				a:hover&
					text-decoration underline
		&__check
			display flex
			flex-direction column
			margin-top -5px
			&-item
				align-self flex-start
				text-decoration none
				margin 8px 0
				&--hidden
					display none
		&__clear
			padding 24px 0 26px
			margin 0 20px
		&__row
			width 100%
			margin-top 16px
	&-cats
		&__back
			line-height 2.1rem
			border-bottom 1px solid #eee
			padding 18px 0
			margin 0 20px
			a
				display block
				color $colorLight
				text-decoration none
				&:hover
					text-decoration underline
		&__list
			display flex
			flex-direction column
			margin-top -8px
			&-item
				line-height 2.1rem
				margin 8px 0
				&--hidden
					display none
				a
					color $colorGray
					text-decoration none
					&:hover
						text-decoration underline
	&-sidebar
		&__block
			border-bottom 1px solid #eee
			padding 15px 0 25px
			margin 0 20px
			&--hidden
				display none
			&--collapsed
				padding 15px 0 0
			&-title
				position relative
				color $colorDark
				font-weight 500
				font-size 1.7rem
				padding-right 30px
				margin-bottom 18px
				cursor pointer
				&.js-category-block-title-collapse
					&::before
						position absolute
						top 2px
						bottom @top
						left -20px
						width 3px
						background-color $colorLight
						content ''
					&::after
						position absolute
						top 50%
						right 0
						width 8px
						height @width
						border solid $colorLight
						border-width 2px 2px 0 0
						content ''
						transform rotate(-45deg) translateY(-50%)
						transition all .2s
				&--collapsed.js-category-block-title-collapse
					&::after
						right 8px
						transform-origin right top
						transform rotate(135deg) translateY(-50%)
		&__showrows
			position relative
			width 100%
			color $colorLight
			text-decoration none
			margin-top 8px
			&::after
				position absolute
				top 50%
				right 0
				width 8px
				height @width
				border solid $colorLight
				border-width 0 0 2px 2px
				content ''
				transform-origin top left
				transform rotate(-45deg) translateY(-50%)
				transition all .2s
			a:hover&
				text-decoration underline
			&--hidden
				display none
			&--collapsed
				&::after
					transform-origin 3px -1px
					transform rotate(135deg) translateY(-50%)
	&__main
		flex 1
		margin-left 15px
	&__system
		display flex
		justify-content space-between
		align-items center
		background-color #fff
		border-radius 2px
		padding 18px 28px
		margin-bottom 14px
		box-shadow 0 5px 10px rgba($colorDark, .1)
	&__sort
		.select
			width 245px
		&-current
			vertical-align middle
			width 38px
			padding 0
			&--desc
				background url('../i/icons/icon-sort-desc.svg') no-repeat center center / 16px auto
			&--asc
				background url('../i/icons/icon-sort-asc.svg') no-repeat center center / 16px auto
	&__view
		display flex
		&-item
			margin-right 14px
			&:last-of-type
				margin-right 0
			svg
				width 20px
				height @width
				fill $colorLight
				transition all .2s
			&--active
			a:hover&
				svg
					fill $colorGray
	&__items
		&--table
			^[0]-product
				display flex
				background-color #fff
				padding 20px
				margin 14px 0
				box-shadow 0 5px 10px rgba($colorDark, .1)
				&__pic
					flex-shrink 0
					width 160px
					text-align center
					background url('../i/camera.svg') no-repeat center 0 / 120px auto
				&__main
					flex 1
					margin 0 30px 0 15px
				&__name
					color $colorDark
					margin-bottom 20px
					a
						color @color
						text-decoration none
						&:hover
							text-decoration underline
				&__price
					display flex
					align-items center
					margin-bottom 15px
					&-value
						color $colorDark
						font-weight 500
						font-size 2.3rem
						margin-right 10px
					&-tip
						text-decoration-style dotted
						margin-left 10px
				&__stock
					color #2cc81e
					margin-bottom 25px
				&__draft
					display inline-flex
					color $colorGray
					font-size 1.1rem
					background-color #fafafa
					border 1px solid #ddd
					border-radius 1px
					padding 6px 8px
					margin-bottom 15px
				&__toCart
					display flex
					&-spinner
						position relative
						width 112px
						padding-right 28px
						margin-right 7px
						&::before
							position absolute
							top 0
							right 0
							bottom 0
							z-index 2
							width 29px
							border 1px solid #ddd
							border-radius 0 2px 2px 0
							content ''
						.input-text
							position relative
							z-index 3
							text-align center
							border-radius 2px 0 0 2px
					&-plus
					&-minus
						position absolute
						right 0
						z-index 4
						width 27px
						height 50%
						&::before
							position absolute
							left 50%
							border solid transparent
							content ''
							transform translateX(-50%)
							transition all .2s
					&-plus
						top 0
						&::before
							bottom 3px
							border-width 0 4px 5px
							border-bottom-color $colorLight
						a:hover&
							&::before
								border-bottom-color $colorGray
					&-minus
						bottom 0
						&::before
							top 3px
							border-width 5px 4px 0
							border-top-color $colorLight
						a:hover&
							&::before
								border-top-color $colorGray
				&__info
					position relative
					width 240px
					padding 20px 28px
					margin -20px 0
					&::before
						position absolute
						top 0
						bottom 0
						left 0
						width 1px
						background-image repeating-linear-gradient(#eee, #eee 5px, #fff 5px, #fff 6px)
						content ''
				&__details
					position relative
					padding-bottom 16px
					&::after
						position absolute
						right 0
						bottom 0
						left 0
						height 1px
						background-image repeating-linear-gradient(to right, #eee, #eee 5px, #fff 5px, #fff 6px)
						content ''
					&-item
						color $colorLight
						margin 16px 0
						&:first-child
							margin-top 0
						&:last-child
							margin-bottom 0
						&--available
							position relative
							color $colorGray
							&::before
								position absolute
								top 50%
								left -14px
								width 7px
								height @width
								background-color #2cc81e
								border-radius 50%
								content ''
								transform translateY(-50%)
				&__seller
					position relative
					white-space nowrap
					&-name
						overflow hidden
						color $colorGray
						font-weight 500
						text-overflow ellipsis
						margin 10px 0
					&-address
						overflow hidden
						color $colorLight
						font-style normal
						text-overflow ellipsis
					&-link
						position absolute
						top 0
						right 0
						bottom 0
						left 0
	&__pagination
		display flex
		justify-content center
		margin-top 28px
	&__subcat
		display flex
		flex-wrap wrap
		justify-content space-between
	&-subcat
		&__item
			position relative
			width calc(33.33% - 11px)
			text-align center
			background-color #fff
			border-radius 2px
			padding 20px 30px 40px
			margin-bottom 20px
			box-shadow 0 5px 10px rgba($colorDark, .1)
			transition all .2s
			&:hover
				box-shadow 0 6px 12px rgba($colorDark, .2)
			&-pic
				display flex
				justify-content center
				align-items center
				height 150px
				background url('../i/camera.svg') no-repeat center center / 120px auto
				img
					max-height @height
			&-title
				color $colorDark
				font-weight 900
				font-size 1.7rem
				margin-top 10px
			&-count
				position absolute
				bottom 15px
				left 50%
				color $colorLight
				transform translateX(-50%)
			&-link
				position absolute
				top 0
				right 0
				bottom 0
				left 0
	&__description
		background-color #fff
		border-radius 2px
		padding 20px 28px
		margin 20px 0
		box-shadow 0 5px 10px rgba($colorDark, .1)
		&-title
			color $colorDark
			font-weight 900
			font-size 1.7rem
			border-bottom 1px solid #eee
			padding-bottom 15px
			margin 0 0 15px
		&-text
			color $colorGray
			line-height 2.1rem
	&__offers
		margin-bottom 20px
	&-offers
		&__item
			display flex
			background-color #fff
			border-radius 2px
			padding 28px
			margin-bottom 14px
			box-shadow 0 5px 10px rgba($colorDark, .1)
			&-pic
				flex-shrink 0
				align-self center
				width 70px
				height @width
				border 1px solid #eee
				img
					object-fit cover
					width 100%
					height @width
			&-main
				flex 1
				margin 0 30px
			&-name
				color $colorDark
				font-weight 500
				line-height 2.1rem
				margin-bottom 15px
				a
					color @color
					text-decoration none
					&:hover
						text-decoration underline
			&-code
				color $colorLight
			&-price
				color $colorDark
				font-weight 500
				font-size 1.7rem
				text-align right
			&-shippers
				color $colorLight
				font-weight 400
				font-size 1.3rem
				margin-top 15px
/*  </category>  */

/*  <product>  */
.product
	&__general
		background-color #fff
		padding-bottom 85px
		.breadcrumbs
			padding-top 18px
			margin 0 0 18px
	&__main
		display flex
		margin-top 40px
	&__photos
		display flex
	&-photos
		&__thumbs
			flex-shrink 0
			position relative
			width 50px
			height 300px
			padding 35px 0
			&-wrap
				display flex
				flex-direction column
				overflow hidden
				height 100%
			&-arrow
				position absolute
				right 0
				left 0
				height 35px
				&:hover
					&::before
						border-color $colorGray
				&::before
					position absolute
					top 50%
					left 50%
					width 12px
					height @width
					border solid $colorLight
